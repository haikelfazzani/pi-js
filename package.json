{
  "name": "pijs",
  "version": "1.0.0",
  "description": "Javascript playground",
  "icon": "icons/logo256.png",
  "main": "dist/electron.js",
  "scripts": {
    "start": "webpack-dev-server  --config webpack.dev.js",
    "build": "webpack --config webpack.prod.js",
    "el": "electron .",
    "packager": "electron-packager . --ignore=^/src",
    "pack": "electron-builder --dir",
    "dist": "electron-builder"
  },
  "keywords": [
    "playground",
    "code",
    "editor"
  ],
  "author": "Haikel Fazzani",
  "license": "MIT",
  "dependencies": {    
  },
  "devDependencies": {
    "@babel/core": "^7.8.4",
    "@babel/preset-react": "^7.8.3",
    "babel-loader": "^8.0.6",
    "clean-webpack-plugin": "^3.0.0",
    "copy-webpack-plugin": "^5.1.1",
    "css-loader": "^3.4.2",
    "electron": "^8.0.1",
    "electron-builder": "^22.4.0",
    "file-loader": "^5.1.0",
    "html-loader": "^0.5.5",
    "html-webpack-plugin": "^3.2.0",
    "mini-css-extract-plugin": "^0.9.0",
    "node-sass": "^4.13.1",
    "optimize-css-assets-webpack-plugin": "^5.0.3",    
    "sass-loader": "^8.0.2",    
    "style-loader": "^1.1.3",
    "terser-webpack-plugin": "^2.3.5",
    "webpack": "^4.41.6",
    "webpack-cli": "^3.3.11",
    "webpack-dev-server": "^3.10.3",
    "webpack-merge": "^4.2.2",
    "ace-builds": "^1.4.8",
    "react": "^16.12.0",
    "react-ace": "^8.0.0",
    "react-dom": "^16.12.0",
    "react-split": "^2.0.7",
    "js-beautify": "^1.10.3"
  },
  "build": {
    "asar": false,
    "win": {
      "target": [
        {
          "target": "nsis",
          "arch": [
            "x64"
          ]
        }
      ]
    },
    "nsis": {
      "installerIcon": "icons/logo.ico",
      "uninstallerIcon": "icons/logo.ico",
      "license": "License.md"
    },
    "directories": {
      "buildResources": "dist",
      "output": "build"
    },
    "files": [
      "dist/electron.js",
      "dist/*",
      "dist/*/**",
      "!**/node_modules/*",
      "!icons/*"
    ]
  }
}
